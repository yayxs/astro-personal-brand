---
import { Icon } from 'astro-icon/components'
import ContentSection from '~/components/ContentSection.astro'

import { type FeatureItem } from '~/types'

const list: Array<FeatureItem> = [
  {
    title: 'Learn',
    description: 'Learning all the time ',
    icon: 'mdi:learn-outline',
    link: '/learn',
  },
  {
    title: 'Blog',
    description: 'Write some articles and posts',
    icon: 'fa6-solid:blog',
    link: '/blog',
  },
  {
    title: 'Tutorial',
    description: 'Front-end systematic tutorial',
    icon: 'mdi:handshake',
  },
  {
    title: 'Life',
    description: 'More than just code',
    icon: 'mdi:handshake',
  },
  {
    title: 'Docs',
    description: 'Customized document content',
    icon: 'mdi:file-document-outline',
    link: '/docs/getting-started/',
  },
  {
    title: 'City',
    description: 'Your guide to choosing a city',
    icon: 'mdi:handshake',
  },
]
---

<ContentSection title="Features" id="features">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      list.map(({ title, description, icon, link }) => {
        return (
          <a href={link}>
            <li class="flex cursor-pointer flex-col items-center gap-4 border p-6">
              {/* <div class="size-6 rounded-full border-2 border-current p-3 text-base"> */}
              <Icon name={icon} class="size-8" />
              {/* </div> */}
              <p class="text-center text-xl font-extrabold">{title}</p>
              <p class="text-center text-sm">{description}</p>
            </li>
          </a>
        )
      })
    }
  </ul>
</ContentSection>
