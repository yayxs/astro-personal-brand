---
import { Icon } from 'astro-icon/components'
import ContentSection from '~/components/ContentSection.astro'

import { FeatureItem } from '~/types'

const list: Array<FeatureItem> = [
  {
    title: 'Learn',
    description: 'Learning all the time ',
    icon: 'mdi:handshake',
  },
  {
    title: 'Blog',
    description: 'Write some articles and posts',
    icon: 'mdi:handshake',
    link: '/blog',
  },
  {
    title: 'Tutorial',
    description: 'Systematic tutorial',
    icon: 'mdi:handshake',
  },
  {
    title: 'Life',
    description: 'More than just code',
    icon: 'mdi:handshake',
  },
]
---

<ContentSection title="Features" id="features">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      list.map(({ title, description, icon, link }) => {
        return (
          <a href={link}>
            <li class="flex flex-col items-center gap-4 border p-6 cursor-pointer">
              <div class="size-6 rounded-full border-2 border-current p-3">
                <Icon name={icon} class="size-full" />
              </div>
              <p class="text-center font-extrabold text-xl">{title}</p>
              <p class="text-center text-sm">{description}</p>
            </li>
          </a>
        )
      })
    }
  </ul>
</ContentSection>
